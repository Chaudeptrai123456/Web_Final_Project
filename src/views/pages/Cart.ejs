    <% for (var i = 0;i<productlist.length;i++) { %>
        <div class="card" style="width: 18rem;">
            <div style="text-align:center">Id <%=productlist[i].idproduct%></div>
            <img class="card-img-top" src="/<%=productlist[i].idproduct%>.jpeg"  width="160"height="250">
